{
  "compilerOptions": {
    "outDir": "bin",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "target": "es5",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "es2015"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}